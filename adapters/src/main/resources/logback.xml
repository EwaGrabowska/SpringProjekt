<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                [%d{yyyy-MM-dd' 'HH:mm:ss' '}] [%C] [%t] [%L] [%-5p] %m%n
            </pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder>
            <pattern>
                [%d{yyyy-MM-dd' 'HH:mm:ss' '}] [%C] [%t] [%L] [%-5p] %m%n
            </pattern>
        </encoder>
        <file>.logs/springProjekt.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>.logs/archived/springProjekt_%d{dd-MM-yyyy}_%i.log</fileNamePattern>
            <maxFileSize>2MB</maxFileSize>
            <maxHistory>10</maxHistory>
            <totalSizeCap>25MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <logger name="org.hibernate" additivity="false" level="DEBUG">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="org.springframework.web" additivity="false" level="INFO">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="com.spring.start.springProjekt" additivity="false" level="DEBUG">
        <appender-ref ref="FILE"/>
    </logger>

</configuration>